{
  "name": "esop-view",
  "private": true,
  "version": "0.0.0",
  "main": "./src-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "productName": "EsopView",
    "appId": "com.anbong",
    "copyright": "com.Anbong Â© 2024",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release/"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EsopView"
    },
    "win": {
      "icon": "/public/anbang_logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "/public/anbang_logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    },
    "linux": {
      "icon": "/public/anbang_logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    }
  },
  "dependencies": {
    "axios": "^1.7.2",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "naive-ui": "^2.38.2",
    "vite": "^5.2.0",
    "vite-plugin-electron": "^0.28.7"
  },
  "volta": {
    "node": "20.5.0"
  }
}
